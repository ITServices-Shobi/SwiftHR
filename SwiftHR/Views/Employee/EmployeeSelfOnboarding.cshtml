<form id="frmOnboardingList" asp-controller="Employee" asp-action="EmployeeOnbList" method="post">
    <section class="content-header">
        <h1>
            Onboarding Employees
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="alertS alert-success" id="modal-success" style="display:none;">
            <button type="button" class="close" aria-hidden="true" onclick="successAlertClose(event)">&times;</button>
            <h4><i class="icon fa fa-check"></i> Success </h4>
            <p id="successBody"></p>
        </div>
        <div class="box-body box-profile">
            <div class="box box-default">

                @*<div class="box-header">
                    <h3 class="box-title">Data Table With Full Features</h3>
                </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblEmpOnbList" class="table table-bordered table-striped dt-responsive nowrap table-hover" style="width:100%">
                        <thead>
                            <tr class="bg-primary">
                                <th> Name </th>
                                <th> Onboarding Status </th>
                                <th> Employee No </th>
                                @*<th> Contact No </th>
                                <th> Email </th>*@
                                <th> Department </th>
                                <th> Designation </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.Count() > 0)
                            {
                                @foreach (var contact in Model)
                                {
                                    <tr id="@contact.empDetails.EmployeeId">
                                        <td style="width: 20%;"> <img src="../UploadImages/@contact.empDetails.EmployeeProfilePhoto" alt="Emp Image" style="width:10% !important; border-radius: 50%;"> <span style="margin-left:5%;"> <strong> @contact.empDetails.FirstName  @contact.empDetails.MiddleName  @contact.empDetails.LastName </strong>  </span> </td>
                                        @if (contact.empOnboardingDetails.OnboardingStatus == 0)
                                        {
                                            <td style="width: 10%;"><small class="label  bg-red-gradient"><i class="fa fa-gears"></i> Initiated</small></td>
                                        }
                                        @if (contact.empOnboardingDetails.OnboardingStatus == 1)
                                        {
                                            <td style="width: 10%;"><small class="label  bg-green-gradient"><i class="fa fa-folder-open-o"></i> In Progress</small></td>
                                        }
                                        @if (contact.empOnboardingDetails.OnboardingStatus == 2)
                                        {
                                            <td style="width: 10%;"><small class="label bg-blue-gradient"><i class="fa fa-calendar-times-o"></i> Pending Approval</small></td>
                                        }
                                        <td style="width: 5%;">
                                            <a asp-controller="Employee" asp-action="EmployeeProfileDetails" asp-route-empId="@contact.empDetails.EmployeeId" asp-route-callingView="EmployeeOnboarding" data-toggle="modal" data-target="#modal-profile" data-backdrop="static" data-keyboard="false">
                                                @contact.empDetails.EmployeeNumber
                                            </a>
                                            <input id="hndfEmployeeIdVal" name="empId" type="hidden" value="@contact.empDetails.EmployeeId" />
                                        </td>
                                        @*<td>@contact.empDetails.ContactNumber</td>
                                        <td> @contact.empDetails.Email </td>*@
                                        <td>@contact.empDetails.Department</td>
                                        <td>@contact.empDetails.Designation </td>
                                        <td style="width: 20%;">
                                            @if (contact.empOnboardingDetails.OnboardingStatus >= 2)
                                            {
                                                <button type="button" id="_@contact.empDetails.EmployeeId" asp-controller="Employee" asp-action="ApproveEmployeeOnboarding" asp-route-empId="@contact.empDetails.EmployeeId" class="btn btn-primary pull-left btn-xs" style="float: left; margin-right: 4%;" onclick="ApproveOnboard(@contact.empDetails.EmployeeId);"> Approve Onboard </button>
                                                <button type="button" id="_@contact.empDetails.EmployeeId" class="btn btn-danger pull-right btn-xs" style="float: right; margin-right: 4%;" onclick="validateOnbData(@contact.empDetails.EmployeeId);"> Send For Updation </button>
                                            }
                                            @if (contact.empOnboardingDetails.OnboardingStatus < 2)
                                            {
                                                <button type="button" disabled id="_@contact.empDetails.EmployeeId" asp-controller="Employee" asp-action="ApproveEmployeeOnboarding" asp-route-empId="@contact.empDetails.EmployeeId" class="btn btn-default pull-left btn-xs" style="float: left; margin-right: 4%;" onclick="ApproveOnboard(@contact.empDetails.EmployeeId);"> Approve Onboard </button>
                                                <button type="button" disabled id="_@contact.empDetails.EmployeeId" class="btn btn-default pull-right btn-xs" style="float: right; margin-right: 4%;" onclick="validateOnbData(@contact.empDetails.EmployeeId);"> Send For Updation </button>
                                            }

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->

            </div>
        </div>
        <!-- /.modal -->
    </section>
</form>



